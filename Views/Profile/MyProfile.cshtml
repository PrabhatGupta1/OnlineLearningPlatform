@model OnlineLearningPlatform.Models.ApplicationUserViewModel

@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="my-5">
    @* <h4>ApplicationUserViewModel</h4> *@
    <hr />
    <div class="row">
        <div class="col-sm-2 p-3 border">
            <div class="text-center">
                <img src="~/Images/@(Model.ProfilePicPath != null ? "ProfilePictures/" + Model.ProfilePicPath : "AppImages/EmptyProfilePic.jpg")" class="rounded-circle" style="width: 150px; height: 150px;" />
            </div>
            <br />
            <div class="text-center">
                <h4>@Html.DisplayFor(model => model.FullName)</h4>
            </div>
        </div>
        <div class="col-sm-10 p-3 border">
            <div class="text-center">
                <h1>Public Profile</h1>
                <p>Manage Your Personal Information</p>
            </div>
            <dl class="row">
                <hr />
                @* <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt> *@
                @* <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.FullName)
                </dd> *@
                
                @* <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProfilePicture)
                </dt> *@

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Bio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Bio)
                </dd>

                <dt class="col-sm-2">
                    Profile creation time @*  @Html.DisplayNameFor(model => model.CreatedAt) *@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Edit</a>
                <a asp-controller="Course" asp-action="MyLearnings" asp-route-id="@Model?.Id" class="btn btn-info">My Learnings</a>
                @* <a asp-action="Index">Back to List</a> *@
            </div>
        </div>
    </div>
    
</div>

