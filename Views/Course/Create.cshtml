@model OnlineLearningPlatform.Models.CourseViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Title" class="form-control" placeholder="Title"/>
                <label asp-for="Title" class="form-label"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Description" class="form-control" placeholder="Description"/>
                <label asp-for="Description" class="form-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Price" class="form-control" placeholder="Price"/>
                <label asp-for="Price" class="form-label"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <select asp-for="CategoryId" asp-items="CourseViewModel.CategoryList" class="form-select">
                    <option disabled selected value="">Select Category</option>
                </select>
                <label asp-for="CategoryId" class="form-label"></label>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <select asp-for="Language" class="form-select" asp-items="@Html.GetEnumSelectList<CourseViewModel.Languages>()">
                    <option value="" disabled selected>Select Language</option>
                </select>
                <label asp-for="Language" class="form-label"></label>
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <select asp-for="Level" asp-items="@Html.GetEnumSelectList<CourseViewModel.Levels>()" class="form-select">
                    <option disabled selected>Select Level</option>
                </select>
                <label asp-for="Level" class="form-label"></label>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Thumbnail" class="form-control" />
                <label asp-for="Thumbnail" class="form-label"></label>
                <span asp-validation-for="Thumbnail" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-success" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
